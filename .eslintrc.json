{
  "env": {
    "browser": true,
    "commonjs": true
  },
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "sonar"],
  "rules": {
    "sonar/deprecation": 1,
    "no-plusplus": 0,
    "import/extensions": [1, "ignorePackages"],
    "no-multiple-empty-lines": 0,
    "import/no-unresolved": 0,
    "import/prefer-default-export": 0,
    "linebreak-style": "off",
    "operator-linebreak": "warn"
  }
}
